{
	"compilerOptions": {
		"target": "ES2019",
		"moduleResolution": "node",
		"module": "commonjs",
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"outDir": "../../dist/game",
		"lib": ["ES2019"],
		"composite": true,
		"strictNullChecks": true,
	},
	"exclude": ["../client", "../serial", "../server"]
}
