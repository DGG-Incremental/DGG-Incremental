{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build",
    "downlevelIteration": true,
    "allowJs": true,
    "target": "es5",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "composite": true
  },
  "exclude": ["node_modules"],
  "include": ["./lib/**/*"]
}
