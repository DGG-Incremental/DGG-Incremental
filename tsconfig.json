{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2019",
        "sourceMap": true,
        "lib": [
            "es6"
        ],
        "strict": true,
    },
    "include": ["./src"],
    "exclude": [
        "node_modules",
        "build"
    ]
}